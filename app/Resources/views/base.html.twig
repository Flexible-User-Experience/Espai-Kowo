{% extends 'MopaBootstrapBundle::base.html.twig' %}

{% block title %}{{ main_brand_title }}{% endblock %}

{% block head_style %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
    {% stylesheets filter="cssrewrite,less" '@mycss' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block navbar %}
    <div class="row">
        <div class="col-xs-12">
            <h1 class="text-hide">{{ main_brand_title }}</h1>
            <h2 class="text-hide">Talent fresc!</h2>
            <img class="img-responsive center-block" src="{{ asset('bundles/app/img/logo-espai-kowo.png') }}" alt="{{ main_brand_title }} logo"/>
        </div>
    </div>
{% endblock %}

{% block page_header %}{% endblock %}

{% block footer %}
    <p class="text-center"><a href="mailto:info@espaikowo.cat"><strong>info@espaikowo.cat</strong></a></p>
    <p class="text-center">
        Pl. Ramon Berenguer IV, 1 3B<br>
        43870 Amposta (Tarragona)
    </p>
{% endblock %}

{% block foot_script %}
    {% javascripts '@myjs' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% if google_analytics_enabled %}
        <script type="text/javascript">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', '{{ google_analytics_account }}', 'auto');
            ga('send', 'pageview');
        </script>
    {% endif %}
{% endblock %}
