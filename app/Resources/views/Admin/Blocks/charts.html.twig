{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box box-primary">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    <div id="gchart_dashboard_widget_1"></div>
                    <script type="text/javascript">
                        jQuery(document).ready(function() {
                            {{ gchart_line_chart(dt, 'gchart_dashboard_widget_1', '100%', 500, '', {curveType: 'none', vAxis: {format: '#,###€'}, legend: {position: 'top', alignment: 'center'}, chartArea: {left: 80, top: 60, right: 0, bottom: 40, width: '100%', height: '100%'}, colors: ['#64B660', '#D55552', '#377CB5'], pointSize: 5}) }}
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
    <div class="box box-primary">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table" style="margin-bottom:0">
                        <thead>
                        <tr>
                            <th class="text-right">{{ 'backend.admin.block.table.quarter' | trans }}</th>
                            <th class="text-right">{{ 'backend.admin.block.table.sales' | trans }}</th>
                            <th class="text-right">{{ 'backend.admin.block.table.expenses' | trans }}</th>
                            <th class="text-right">{{ 'backend.admin.block.table.result' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="text-right">{{ eqt.quarter }}</td>
                            <td class="text-right"><span class="text-success">+{{ eqt.salesTaxPortionString }} €</span></td>
                            <td class="text-right"><span class="text-danger">-{{ eqt.expensesTaxPortionString }} €</span></td>
                            <td class="text-right">
                                {% if eqt.resultTaxPortion > 0 %}
                                    <strong><span class="text-danger">{{ eqt.resultTaxPortionString }} €</span></strong>
                                {% else %}
                                    <strong><span class="text-success">+{{ eqt.resultTaxPortionString }} €</span></strong>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
