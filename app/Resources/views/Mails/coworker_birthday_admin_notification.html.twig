{% extends ':Mails:base.html.twig' %}

{% block subject %}Avís d'aniversari!{% endblock %}

{% block content %}
    <table class="row">
        <tbody>
        <tr>
            <th><img src="{{ absolute_url(asset('bundles/app/img/birthday_notification.jpg')) }}"></th>
        </tr>
        </tbody>
    </table>
    <table class="row">
        <tbody>
        <tr>
            <th class="small-12 large-12 columns first last vertical-padding">
                <table>
                    <tr>
                        <th>
                            <h4>Demà és l'aniversari de {{ coworker.name }}!!!</h4>
                            <p class="grey-color">Compleix {{ coworker.birthday | age }} anys. Dona-li una felicitació.</p>
                        </th>
                        <th class="expander"></th>
                    </tr>
                </table>
            </th>
        </tr>
        </tbody>
    </table>
{% endblock %}
