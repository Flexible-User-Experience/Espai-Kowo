{% spaceless %}
    {{ zurb_ink_styles.add("@HampeZurbInkBundle/Resources/public/css/foundation-for-emails/2/foundation.min.css") }}
    {% block preHtml %}{% endblock %}
    {% inlinestyle %}
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width"/>
        {% block headStyles %}
            <style type="text/css">
                {% autoescape false %}
                {{ includeStyles(zurb_ink_styles) }}
                {% block aditionalStyles %}
                    {{ zurb_ink_styles.add("@AppBundle/Resources/public/css/mail.css") }}
                {% endblock %}
                {% endautoescape %}
            </style>
        {% endblock %}
    </head>
    {% inky %}
    <body>
    {% block body %}
        <table class="body green-background">
            <tr>
                <td class="center" align="center" valign="top">
                    <center>
                        <table class="container">
                            <tr>
                                <td>
                                    {# header #}
                                    <table class="row black-background">
                                        <tr>
                                            <th class="small-3 large-6 first columns white-color vertical-padding">
                                                <img src="{{ absolute_url(asset('bundles/app/img/logo-espai-kowo.png') | imagine_filter('60x60')) }}">
                                            </th>
                                            <th class="small-3 large-6 last columns white-color vertical-padding">
                                                <h2 class="text-right">Espai Kowo</h2>
                                                {% block subject %}{% endblock %}
                                            </th>
                                            <th class="expander"></th>
                                        </tr>
                                    </table>
                                    {# body #}
                                    {% block content %}{% endblock %}
                                    {# footer #}
                                    <table class="row black-background">
                                        <tr>
                                            <th class="small-9 large-6 first columns vertical-padding">
                                                <h6 class="green-color">Espai Kowo</h6>
                                                <p class="white-color">
                                                    C. Primer de maig, 1 3r B<br>
                                                    43870 Amposta<br>
                                                    (Tarragona)
                                                </p>
                                            </th>
                                            <th class="small-3 large-1 vertical-padding">
                                                <a href="https://www.facebook.com/espaikowo/">
                                                    <img src="{{ absolute_url(asset('bundles/app/img/facebook.png') | imagine_filter('30x30')) }}">
                                                </a>
                                            </th>
                                            <th class="small-3 large-1 vertical-padding">
                                                <a href="https://twitter.com/espaikowo">
                                                    <img src="{{ absolute_url(asset('bundles/app/img/twitter.png') | imagine_filter('30x30')) }}">
                                                </a>
                                            </th>
                                            <th class="small-3 large-6 last columns vertical-padding">
                                                <p class="white-color text-right">
                                                    &copy; {{ "now" | date("Y") }}
                                                </p>
                                            </th>
                                            <th class="expander"></th>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </center>
                </td>
            </tr>
        </table>
        {#<!-- prevent Gmail on iOS font size manipulation -->#}
        <div style="display:none; white-space:nowrap; font:15px courier; line-height:0;"> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; </div>
    {% endblock %}
    </body>
    {% endinky %}
    </html>
    {% endinlinestyle %}
{% endspaceless %}
