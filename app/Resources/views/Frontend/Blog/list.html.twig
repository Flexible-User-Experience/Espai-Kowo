{% extends ':Frontend:base.html.twig' %}

{% block main %}
<div class="col-xs-12">
    {% for post in posts %}
        <h5><a href="{{ path('front_blog_detail', {slug: post.slug, year: post.publishedAt|date('Y'), month: post.publishedAt|date('m'), day: post.publishedAt|date('d') }) }}">{{ post.title }}</a></h5>
        <h5>{{ post.publishedAt|date('d/m/Y') }}</h5>
    {% endfor %}
    <a href="{{ path('front_homepage') }}">Homepage</a>
</div>
{% endblock %}