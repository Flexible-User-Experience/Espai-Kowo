{% extends ':Frontend:base.html.twig' %}

{% block main %}
    <div class="row">
        {% if posts | length > 0 %}
            {% for post in posts %}
                <div class="col-md-6">
                    <div class="thumbnail">
                        {% if post.imageName is not null %}
                            <img
                                    src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('256xY') }}"
                                    alt="{{ post.imageName }}">
                        {% else %}
                            <img src="{{ asset('bundles/app/img/logo-espai-kowo.png') | imagine_filter('256xY') }}" alt="">
                        {% endif %}
                        <div class="caption">
                            <h3>{{ post.title }}</h3>
                            <p>{{ post.description | truncate(100) | raw }}</p>
                            <p><a href="{{ path('front_blog_detail', {slug: post.slug, year: post.publishedAt|date('Y'), month: post.publishedAt|date('m'), day: post.publishedAt|date('d') }) }}" class="btn btn-primary"
                                  role="button">Detalls</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            {% include ':Frontend/includes:under_construciton_warning.html.twig' %}
        {% endif %}
    </div>
{% endblock %}