{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ post.title }} · Blog · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-md-4">
                {# left side #}
                {% include ':Frontend/includes:image_detail.html.twig' with {object: post} %}
            </div>
            <div class="col-md-8">
                <h2 class="no-m-top">{{ post.title }}</h2>
                <h4 class="text-muted">{{ post.publishedAt | date('d/m/Y') }}</h4>
                <h4 class="c-green">{{ post.tags | join(', ')  }}</h4>
                <p class="underlined-anchors">{{ post.description | raw }}</p>
            </div>
        </div>
    </div>
{% endblock %}
