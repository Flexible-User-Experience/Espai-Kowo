{% extends ':Frontend:base.html.twig' %}

{% block title %}Activitats · {{ parent() }}{% endblock %}

{% block main %}
    <div class="p-vertical-small grey-background">
        <div class="container">
            <div class="row">
                <div class="col-sm-10">
                    <h5>Estigues el dia de les nostres activitats</h5>
                </div>
                <div class="col-sm-2">
                    <span class="hidden-xs pull-right">
                        <button type="button" class="btn btn-sm btn-kowo-orange" data-toggle="modal" data-target="#form_modal">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Subscriu-me al newsletter
                        </button>
                    </span>
                    <span class="visible-xs">
                        <button type="button" class="btn btn-sm btn-kowo-orange" data-toggle="modal" data-target="#form_modal">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Subscriu-me al newsletter
                        </button>
                    </span>
                </div>
            </div>
            {#<!-- Modal -->#}
            <div class="modal fade" id="form_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content text-left">
                        <div class="modal-header green-background-light">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Subscriu-te al nostre butlletí electrònic</h4>
                        </div>
                        <div class="modal-body">
                            {{ form_start(form) }}
                                {{ form_row(form.name) }}
                                {{ form_row(form.email) }}
                                {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container container-main">
        <div class="row">
            <div class="col-xs-12">
                {% include ':Frontend/includes:notice_flash.html.twig' %}
            </div>
        </div>
        <div class="row">
            {% if events | length > 0 %}
                {% for event in events %}
                    <div class="col-md-4">
                        <a href="{{ path('front_event_detail', {slug: event.slug}) }}">
                            {% include ':Frontend/includes:image_detail.html.twig' with {object: event} %}
                        </a>
                        <div class="caption">
                            <h4>{{ event.title }}</h4>
                            <h6 class="text-muted">{{ event.date | date('d/m/Y') }}</h6>
                            <p>{{ event.description |truncate(100) | raw }}</p>
                            <p><a href="{{ path('front_event_detail', {slug: event.slug}) }}" class="btn btn-kowo"
                                  role="button">Llegir més</a></p>
                        </div>
                    </div>
                    {% if loop.index is divisible by(3) %}
                        </div>
                        <div class="row extra-m-top">
                    {% endif %}
                {% endfor %}
            {% else %}
                {% include ':Frontend/includes:under_construciton_warning.html.twig' %}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if not form.vars.valid %}
        <script type="text/javascript">
            jQuery(document).ready(function() {
                jQuery('#form_modal').modal('show');
            });
        </script>
    {% endif %}
{% endblock %}
