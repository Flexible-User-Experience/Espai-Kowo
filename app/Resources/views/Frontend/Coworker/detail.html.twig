{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ coworker.name }} · Coworker · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="no-m-top">Coworkers</h1>
                <h3>{{ coworker.name }} / {{ coworker.category }}</h3>
                <h5>{{ coworker.description | raw }}</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {# left side #}
                {% if coworker.imageName is not null %}
                    <img
                            src="{{ vich_uploader_asset(coworker, 'imageFile') | imagine_filter('480xY') }}"
                            alt="{{ coworker.imageName }}">

                {% else %}
                    <img src="{{ asset('bundles/app/img/kiwi-pic.jpg') | imagine_filter('480xY') }}" alt="">
                {% endif %}
            </div>
            <div class="col-md-6">
                {# right side #}
                <h4>{{ coworker.name | upper}}</h4>
                <h5 style="color: greenyellow">{{ coworker.category | upper}}</h5>
                <p>{{ coworker.description | raw }}</p>
                <h6>{{ coworker.email }}</h6>
                <ul class="list-inline">
                    {% for socialNetwork in coworker.socialNetworks %}
                            <li>
                                <a target="_blank" href="{{ socialNetwork.url }}">
                                    <i class="fa {{ socialNetwork.category.fontAwesomeClass }} fa-2x" aria-hidden="true"></i>
                                </a>
                            </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
