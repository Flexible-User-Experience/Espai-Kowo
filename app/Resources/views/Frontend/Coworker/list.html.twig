{% extends ':Frontend:base.html.twig' %}

{% block main %}
    <div class="row">
        {% if coworkers | length > 0 %}
            {% for coworker in coworkers %}
                <div class="col-md-4">
                    <div class="thumbnail">
                        {% if coworker.imageName is not null %}
                            <img
                                    src="{{ vich_uploader_asset(coworker, 'imageFile') | imagine_filter('256xY') }}"
                                    alt="{{ coworker.imageName }}">
                        {% else %}
                            <img src="{{ asset('bundles/app/img/logo-espai-kowo.png') | imagine_filter('256xY') }}" alt="">
                        {% endif %}
                        <div class="caption">
                            <h3>{{ coworker.name }}</h3>
                            <p>{{ coworker.description | truncate(5) }}</p>
                            <p><a href="{{ path('front_coworker_detail', {id: coworker.id}) }}" class="btn btn-primary"
                                  role="button">Més</a></p>
                            <ul class="list-inline">
                                {% for socialNetwork in coworker.socialNetworks %}
                                    <li> <a target="_blank" href="{{ socialNetwork.url }}">
                                            <img
                                                    src="{{ vich_uploader_asset(socialNetwork.category, 'imageFile') | imagine_filter('60x60') }}"
                                                    alt="{{ socialNetwork.category.imageName }}">
                                        </a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="alert alert-warning" role="alert">En construcció</div>
        {% endif %}
    </div>
{% endblock %}
