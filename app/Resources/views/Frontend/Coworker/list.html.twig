{% extends ':Frontend:base.html.twig' %}

{% block title %}Coworkers · {{ parent() }}{% endblock %}

{% block main %}
    <div class="row">
        {% if coworkers | length > 0 %}
            {% for coworker in coworkers %}
                <div class="col-md-3">
                    <div class="thumbnail">
                        {% if coworker.imageName is not null %}
                            <img
                                    src="{{ vich_uploader_asset(coworker, 'imageFile') | imagine_filter('256xY') }}"
                                    alt="{{ coworker.imageName }}">
                        {% else %}
                            <img src="{{ asset('bundles/app/img/logo-espai-kowo.png') | imagine_filter('256xY') }}" alt="">
                        {% endif %}
                        <div class="caption">
                            <h3>{{ coworker.name }}</h3>
                            <p>{{ coworker.description | truncate(100) | raw }}</p>
                            <p><a href="{{ path('front_coworker_detail', {slug: coworker.slug}) }}" class="btn btn-primary"
                                  role="button">Més</a></p>
                            <ul class="list-inline">
                                {% for socialNetwork in coworker.socialNetworks %}
                                    <li>
                                        <a target="_blank" href="{{ socialNetwork.url }}">
                                            <i class="fa {{ socialNetwork.category.fontAwesomeClass }} fa-2x" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                {% if loop.index is divisible by(4) %}
                    </div>
                    <div class="row">
                {% endif %}
            {% endfor %}
        {% else %}
            {% include ':Frontend/includes:under_construciton_warning.html.twig' %}
        {% endif %}
    </div>
{% endblock %}
