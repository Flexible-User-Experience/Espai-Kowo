{% extends ':Frontend:base.html.twig' %}

{% block title %}Coworkers · {{ parent() }}{% endblock %}

{% block main %}
    <div class="p-vertical-small green-background-light">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    {#<!-- Button trigger modal -->#}
                    <button type="button" class="btn btn-kowo-orange" data-toggle="modal" data-target="#form_modal">
                        <i class="fa fa-heart" aria-hidden="true"></i> Vull provar aquest servei
                    </button>
                </div>
            </div>
        </div>
    </div>
    {#<!-- Modal -->#}
    <div class="modal fade" id="form_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content text-left">
                <div class="modal-header green-background-light">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Deixa'ns les teves dades i t'ho explicarem tot amb més detall</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.email) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% include ':Frontend/includes:notice_flash.html.twig' %}
    <div class="container container-main">
        <div class="row">
        {% if coworkers | length > 0 %}
            {% for coworker in coworkers %}
                <div class="col-md-3 mobile-m-bottom">
                    <h4 class="no-m-top text-center light-font-weight">{{ coworker.name | upper }} {{ coworker.surname | upper }}</h4>
                    <a href="{{ path('front_coworker_detail', {slug: coworker.slug}) }}">
                        {% if coworker.imageName is not null %}
                            <img
                                    src="{{ vich_uploader_asset(coworker, 'imageFile') | imagine_filter('263x338xBW') }}"
                                    class="img-responsive center-block" alt="{{ coworker.imageNameBW }}">
                        {% else %}
                            <img src="{{ asset('bundles/app/img/kiwi-pic.jpg') | imagine_filter('263x338xBW') }}" class="img-responsive center-block" alt="default coworker image">
                        {% endif %}
                    </a>
                    <ul class="list-inline social-networks text-center">
                        {% include ":Frontend/includes:social_network_category.html.twig" with {coworker: coworker} %}
                    </ul>
                    <p class="text-center">{{ coworker.category }}</p>
                </div>
                {% if loop.index is divisible by(4) %}
                    </div>
                    <div class="row extra-m-top">
                {% endif %}
            {% endfor %}
        {% else %}
            {% include ':Frontend/includes:under_construciton_warning.html.twig' %}
        {% endif %}
        </div>
    </div>
{% endblock %}
